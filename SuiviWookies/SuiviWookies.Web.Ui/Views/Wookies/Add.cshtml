@model WookieViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    IEnumerable<SelectListItem> weaponsItems = Model.Weapons.Select(item => new SelectListItem() { Text = item.Label, Value = item.Id.ToString() });
}

<h1>Nouvelle naissance</h1>

<form asp-action="Add" asp-controller="Wookies" method="post">
    <i>Test</i>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="Surname">Email address</label>
        <input asp-for="Surname" id="Surname" aria-describedby="surnameHelp" class="form-control">
        <small id="surnameHelp" class="form-text text-muted">Des infos sur le surname</small>

        <span asp-validation-for="Surname"></span>
    </div>

    <div class="form-group">
        <label for="">Arme principale</label>
        <select asp-for="Wookie.MainWeapon.Id" asp-items="weaponsItems" class="form-select"></select>
    </div>
    
    <button type="submit" class="btn btn-primary">Déclarer</button>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}